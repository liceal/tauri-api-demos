{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "tauri-api-demos",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "app": {
        "all": true
      },
      "shell": {
        "all": true,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["$DOWNLOAD", "$DOWNLOAD/*"]
      },
      "http": {
        "scope": [
          "https://tauri.app/*",
          "https://api.bilibili.com/*",
          "https://linxianao.com/*"
        ]
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "os": {
        "all": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.feint.tauri",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": ["zh-CN"]
        },
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": ["https://linxianao.com/tauri-test/test.json"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVDQUFGQ0Q1RkZFMUFCM0YKUldRL3ErSC8xZnlxWE9Bc09qOEYydU1qWURsNHpGR3BUL0JxVVF2a2cyVGZGaDd4UytlcmdGdHAK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "tauri Api 实例",
        "width": 800,
        "label": "main",
        "visible": true
      },
      {
        "width": 400,
        "height": 200,
        "decorations": true,
        "center": true,
        "url": "/#/login",
        "label": "login",
        "visible": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
